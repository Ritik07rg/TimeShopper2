<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/seller_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seller Name"
        android:textAlignment="textStart"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary" />

    <ImageView
        android:id="@+id/seller_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/seller_names"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/seller_sids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_names"
        android:text="Seller Sid"
        android:textSize="16dp"
        android:layout_marginTop="2dp"
        android:textAlignment="center"
        android:visibility="invisible"
        android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/seller_phones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seller_image"
            android:text="Seller Phone"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:textAlignment="viewEnd"
            android:layout_marginEnd="15dp"
            android:textColor="@color/colorPrimaryDark"/>

</RelativeLayout>
</androidx.cardview.widget.CardView>