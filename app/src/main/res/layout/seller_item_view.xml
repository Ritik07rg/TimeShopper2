<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="3.5dp"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="4.5dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/seller_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" />

<!--        <TextView-->
<!--            android:id="@+id/seller_product_state"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@+id/seller_product_name"-->
<!--            android:text="Product State"-->
<!--            android:textSize="16dp"-->
<!--            android:layout_marginTop="2dp"-->
<!--            android:textAlignment="center"-->
<!--            android:textColor="@color/colorPrimaryDark"/>-->


        <ImageView
            android:id="@+id/product_seller_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/seller_product_name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="0dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/product_seller_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_seller_image"
            android:text="Product Price"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/product_seller_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_seller_price"
            android:text="Product Description"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>